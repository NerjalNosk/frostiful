{
  "schemaVersion": 1,
  "id": "frostiful",
  "version": "${version}",

  "name": "Frostiful",
  "description": "Expands upon the freezing system added with Powdered Snow in 1.17.",
  "authors": [
    "TheDeathlyCow"
  ],
  "contact": {
    "homepage": "https://github.com/TheDeathlyCow",
    "sources": "https://github.com/TheDeathlyCow/frostiful",
    "issues": "https://github.com/TheDeathlyCow/frostiful/issues"
  },

  "license": "CC0-1.0",
  "icon": "assets/frostiful/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "com.github.thedeathlycow.frostiful.init.Frostiful"
    ],
    "server": [
      "com.github.thedeathlycow.frostiful.init.FrostifulServer"
    ],
    "client": [
      "com.github.thedeathlycow.frostiful.init.FrostifulClient"
    ],
    "modmenu": [
      "com.github.thedeathlycow.frostiful.init.FrostifulModMenu"
    ]
  },
  "mixins": [
    "frostiful.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.13.3",
    "fabric": "*",
    "minecraft": "1.18.x",
    "java": ">=17"
  },
  "suggests": {
    "another-mod": "*"
  },
  "accessWidener" : "frostiful.accesswidener"
}
